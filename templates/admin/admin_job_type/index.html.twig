{% extends 'base_admin.html.twig' %}

{% block title %}JobType index{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1>JobType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Job_type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_type in job_types %}
            <tr>
                <td>{{ job_type.id }}</td>
                <td>{{ job_type.jobType }}</td>
                <td>
                    <a href="{{ path('admin_job_type_edit', {id: job_type.id}) }}" class="btn btn-secondary">Editer</a>
                        <form method="post" action="{{ path('admin_job_type_delete', {'id': job_type.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job_type.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-right">
            <a href="{{ path('admin_job_type_new') }}" class="btn btn-primary">Cr√©er</a>
        </div>
    </div>
{% endblock %}
